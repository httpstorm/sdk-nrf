/ {
	model = "Protec3 nRF9160";
	compatible = "nordic,protec3-nrf9160";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
	};

	buttons {
		compatible = "gpio-keys";

		button0: button_0 {
			gpios = <&gpio0 27 (GPIO_ACTIVE_LOW)>;
			label = "Button 1";
		};

		pir_int: pir_int {
			gpios = <&gpio0 26 (GPIO_ACTIVE_HIGH)>;
			label = "PIR Sensor Input";
		};

		nrf52840_int: nrf52840_int {
			gpios = <&gpio0 20 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
			label = "nRF52840 Interrupt";
		};

		pmic_int: pmic_int {
			gpios = <&gpio0 17 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "PMIC Interrupt";
		};

		rtc_int: rtc_int {
			gpios = <&gpio0 31 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "RTC Interrupt";
		};

		accel_int1: accel_int_1 {
			gpios = <&gpio0 6 (GPIO_ACTIVE_HIGH)>;
			label = "IIS2D Interrupt 1";
		};

		accel_int2: accel_int_2 {
			gpios = <&gpio0 7 (GPIO_ACTIVE_HIGH)>;
			label = "IIS2D Interrupt 2";
		};

	};

	leds {
		compatible = "gpio-leds";
		red_led: led_1 {
			gpios = <&gpio0 8 0>;
			label = "RGB red channel";
		};
		green_led: led_2 {
			gpios = <&gpio0 9 0>;
			label = "RGB green channel";
		};
		blue_led: led_3 {
			gpios = <&gpio0 10 0>;
			label = "RGB blue channel";
		};

		gps_enable: gps_enable {
			gpios = <&gpio0 3 0>;
			label = "GPS Enable";
		};

		alarm_loud: alarm_loud {
			gpios = <&gpio0 1 0>;
			label = "Alarm buzzer high voltage";
		};
		alarm_enable: alarm_enable {
			gpios = <&gpio0 2 0>;
			label = "Alarm buzzer enable";
		};

	};

	aliases {
		button = &button0;
		pir-int = &pir_int;
		nrf52840-int = &nrf52840_int;
		pmic-int = &pmic_int;
		rtc-int = &rtc_int;
		accel-int1 = &accel_int1;
		accel-int2 = &accel_int2;

		gps-enable = &gps_enable;
		alarm-loud = &alarm_loud;
		alarm-enable = &alarm_enable;

		led0 = &red_led;
		led1 = &green_led;
		led2 = &blue_led;

		rgb-pwm = &pwm0;
		buzzer-pwm = &pwm1;
		nmos-pwm = &pwm2;
	};
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

/* PWM0 is intended for RGB LED control */
&pwm0 {
	status = "okay";
	ch0-pin = <8>;
	ch1-pin = <9>;
	ch2-pin = <10>;
};

/* PWM1 is intended for buzzer control */
&pwm1 {
	status = "okay";
	ch0-pin = <0>;
};

/* PWM2 is intended for NMOS transistor control */
&pwm2 {
	status = "okay";
	ch0-pin = <13>;
	ch1-pin = <14>;
	ch2-pin = <15>;
	ch3-pin = <16>;
};

&pwm3 {
	status = "okay";
};

&i2c2 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	sda-pin = <11>;
	scl-pin = <12>;
	clock-frequency = <I2C_BITRATE_FAST>;

	accel0: iis2dlpc@18 {
		compatible = "st,iis2dlpc";
		label = "IIS2DLPC";
		reg = <0x18>;
/*
		irq-gpios = <&gpio0 9 GPIO_ACTIVE_HIGH>,
					<&gpio0 6 GPIO_ACTIVE_HIGH>;
*/
	};

	eeprom0: at24c08@50 {
		compatible = "atmel,at24";
		label = "AT24C08";
		reg = <0x50>;
		size = <8192>;
		pagesize = <16>;
		address-width = <8>;
		timeout = <5>;
	};
};

&i2c3 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	sda-pin = <30>;
	scl-pin = <29>;
	clock-frequency = <I2C_BITRATE_FAST>;

	m41t60@68 {
		compatible = "st,m41t60";
		label = "M41T60";
		reg = <0x68>;
	};

};

&timer0 {
	status = "okay";
};

&timer1 {
	status = "okay";
};

&timer2 {
	status = "okay";
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	current-speed = <115200>;
	status = "okay";
	tx-pin = <18>;
	rx-pin = <19>;
	/* rts-pin = <20>; */
	/* cts-pin = <21>; */
};

&uart1 {
	current-speed = <9600>;
	status = "okay";
	tx-pin = <4>;
	rx-pin = <5>;
	/* rts-pin = <24>; */
	/* cts-pin = <25>; */
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x10000>;
		};
		slot0_partition: partition@10000 {
			label = "image-0";
		};
		slot0_ns_partition: partition@40000 {
			label = "image-0-nonsecure";
		};
		slot1_partition: partition@80000 {
			label = "image-1";
		};
		slot1_ns_partition: partition@b0000 {
			label = "image-1-nonsecure";
		};
		scratch_partition: partition@f0000 {
			label = "image-scratch";
			reg = <0x000f0000 0xa000>;
		};
		storage_partition: partition@fa000 {
			label = "storage";
			reg = <0x000fa000 0x00006000>;
		};
	};
};

/ {

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		sram0_s: image_s@20000000 {
			/* Secure image memory */
		};

		sram0_bsd: image_bsd@20010000 {
			/* BSD (shared) memory */
		};

		sram0_ns: image_ns@20020000 {
			/* Non-Secure image memory */
		};
	};
};

/* Include partition configuration file */
#include "protec3_nrf9160_partition_conf.dts"
